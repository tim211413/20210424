<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_food"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:src="@drawable/empty" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <ImageView
                android:id="@+id/image_spicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/isspicy" />

            <ImageView
                android:id="@+id/image_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image_spicy"
                android:src="@drawable/isnew" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="麥當勞漢堡"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/text_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_on_primary_emphasis_medium"
        android:gravity="center"
        android:padding="5dp"
        android:text="價格100元起"
        android:textColor="#005100"
        android:textSize="20dp" />


</LinearLayout>